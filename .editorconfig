# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust source files
[*.rs]
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, Cargo.lock, etc.)
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_size = 4
end_of_line = crlf

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Shell scripts (Unix)
[*.sh]
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab
